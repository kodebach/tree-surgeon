    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'tree-surgeon'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=tree-surgeon"
                ],
                "filter": {
                    "name": "tree-surgeon",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tree-surgeon'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tree-surgeon",
                    "--package=tree-surgeon"
                ],
                "filter": {
                    "name": "tree-surgeon",
                    "kind": "bin"
                }
            },
            "args": [
                "${input:file}",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'tree-surgeon'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=tree-surgeon",
                    "--package=tree-surgeon"
                ],
                "filter": {
                    "name": "tree-surgeon",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "file",
            "type": "promptString",
            "description": "Path",
            "default": "../libelektra/src/libs/elektra/key.c"
        }
    ]
}