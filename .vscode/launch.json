{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'tree-surgeon'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=tree-surgeon"
                ],
                "filter": {
                    "name": "tree-surgeon",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'tree-surgeon'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=tree-surgeon",
                    "--package=tree-surgeon"
                ],
                "filter": {
                    "name": "tree-surgeon",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tree-surgeon' (from stdin)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tree-surgeon",
                    "--package=tree-surgeon"
                ],
                "filter": {
                    "name": "tree-surgeon",
                    "kind": "bin"
                }
            },
            "args": [
                "${input:file}",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tree-surgeon' (with script)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tree-surgeon",
                    "--package=tree-surgeon"
                ],
                "filter": {
                    "name": "tree-surgeon",
                    "kind": "bin"
                }
            },
            "args": [
                "${input:file}",
                "${input:script_file}",
            ],
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "file",
            "type": "promptString",
            "description": "File Path",
            "default": "../libelektra/src/plugins/glob/glob.c"
        },
        {
            "id": "script_file",
            "type": "promptString",
            "description": "Script Path",
            "default": "../../uni/msc/paper/scripts/detect_nonthreadsafe.tsg"
        }
    ]
}